{
    "scopeName": "source.rud",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#comments"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "match": "\\b(opx|opr|iso|stk|flx|dmp|max|cha|chb|chc|chx|chy|chz|c1d|c2d|c3d|arg|bin|nan|fi|fo|fch)\\b",
                    "name": "support.function"
                },
                {
                    "match": "\\b(push|pop|mov|cop|out|in|jmp|cs|ncs|lwr|upr|add|rev|mul|div|chr|nb|fill|ini|cpa|res|clr|pass|end|gst|avd)\\b",
                    "name": "keyword"
                }
            ]
        },
        "comments":{
			"patterns": [
				{
					"name":"comment",
					"match": ";.*"
				}
			]
		}
    }
}